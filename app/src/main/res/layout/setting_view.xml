<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_margin_10dp"
    >
    <ImageView
        android:id="@+id/left_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/left_text"
        style="@style/default_small_gray_text"
        android:layout_toRightOf="@id/left_img"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/default_margin_15dp"
        />
    <ImageView
        android:id="@+id/right_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/right_text"
        style="@style/default_small_gray_text"
        android:layout_toLeftOf="@id/right_img"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/default_margin_15dp"
        />
</RelativeLayout>